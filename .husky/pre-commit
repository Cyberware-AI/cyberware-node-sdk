#!/usr/bin/env sh

echo "Running pre-commit hooks..."

# Run Prettier across the repository
npm run format:all
if [ $? -ne 0 ]; then
  echo "Prettier formatting failed. Please fix formatting issues before committing."
  exit 1
fi

# Re-stage any files changed by Prettier so they're included in this commit
git add -A

# Run linter
npm run lint
if [ $? -ne 0 ]; then
  echo "Linting failed. Please fix lint errors before committing."
  exit 1
fi

# Run tests
npm test
if [ $? -ne 0 ]; then
  echo "Tests failed. Please fix tests before committing."
  exit 1
fi

echo "Pre-commit checks passed."
exit 0
